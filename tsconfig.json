{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2017",
        "sourceRoot": "src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "allowJs": false,
        "noEmitOnError": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}